{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./build",
        "rootDir": "./",
        "strict": true,
        "noImplicitOverride": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "office-js",
            "mocha"
        ],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
}